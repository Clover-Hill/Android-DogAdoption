<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dog_constraint"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@mipmap/dog_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dog_name_textview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/dog_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dog name" />

    <TextView
        android:id="@+id/dog_age_textview"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/dog_image"
        app:layout_constraintTop_toBottomOf="@id/dog_name_textview"
        tools:text="Dog age" />

    <TextView
        android:id="@+id/dog_intro_textview"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/dog_image"
        app:layout_constraintTop_toBottomOf="@+id/dog_age_textview"
        tools:text="Here is the description of the dog" />
</androidx.constraintlayout.widget.ConstraintLayout>